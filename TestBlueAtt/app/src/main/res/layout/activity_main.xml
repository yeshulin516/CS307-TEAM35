<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    tools:context=".MainActivity"
    android:transitionGroup="true">

    <TextView android:text="BlueAtt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textView"
        android:layout_below="@+id/textview"
        android:layout_centerHorizontal="true"
        android:textColor="#ff7aff24"
        android:textSize="35dp" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn On"
        android:id="@+id/on"
        android:clickable="true"
        android:onClick="on"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/scan" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get visible"
        android:onClick="visible"
        android:id="@+id/visible"
        android:layout_above="@+id/ld"
        android:layout_toEndOf="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List devices"
        android:onClick="list"
        android:id="@+id/ld"
        android:layout_above="@+id/off"
        android:layout_alignStart="@+id/visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="turn off"
        android:onClick="off"
        android:id="@+id/off"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/on"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="scan"
        android:onClick="scan"
        android:id="@+id/scan"
        android:layout_alignBaseline="@+id/visible"
        android:layout_alignBottom="@+id/visible"
        android:layout_toStartOf="@+id/off" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/visible"
        android:layout_alignStart="@+id/ld"
        android:layout_below="@+id/textView2" />


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView2"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/on"
        android:layout_alignStart="@+id/on"
        android:layout_below="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="devices:"
        android:id="@+id/textView2"
        android:textColor="#ff34ff06"
        android:textSize="25dp"
        android:layout_below="@+id/ld"
        android:layout_alignLeft="@+id/ld"
        android:layout_alignStart="@+id/ld" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paired"
        android:id="@+id/textView3"
        android:textColor="#ff34ff06"
        android:textSize="25dp"
        android:layout_below="@+id/on"
        android:layout_alignLeft="@+id/on"
        android:layout_alignStart="@+id/on" />
</RelativeLayout>
