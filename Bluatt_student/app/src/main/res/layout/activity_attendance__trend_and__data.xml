<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.moonsunhwang.bluatt_student.Attendance_Trend_and_Data">

    <TextView
        android:id="@+id/total_attended_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total classes that attended: 19"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/total_missed_button"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="34dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/total_missed_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total classes that missed: 3"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/percentage_of_class_that_attended_button"
        android:layout_marginStart="9dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="31dp"
        app:layout_constraintLeft_toLeftOf="@+id/total_attended_button"
        android:layout_marginLeft="9dp" />

    <TextView
        android:id="@+id/percentage_of_class_that_attended_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Percentage of class that attended: 86.36%"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/view_attendance_on_specific_date"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="52dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/view_attendance_on_specific_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Attendance on Specific Date"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="166dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="75dp"
        android:layout_height="56dp"
        app:srcCompat="@android:drawable/btn_star_big_on"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
